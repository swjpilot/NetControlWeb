Resources:
  EventBridgePolicy:
    Type: AWS::IAM::Policy
    Properties:
      PolicyName: NetControlEventBridgePolicy
      PolicyDocument:
        Version: '2012-10-17'
        Statement:
          - Effect: Allow
            Action:
              - events:PutRule
              - events:DeleteRule
              - events:DescribeRule
              - events:EnableRule
              - events:DisableRule
              - events:PutTargets
              - events:RemoveTargets
              - events:ListTargetsByRule
            Resource:
              - 'arn:aws:events:us-east-1:156667292120:rule/netcontrol-fcc-schedule'
          - Effect: Allow
            Action:
              - lambda:AddPermission
              - lambda:RemovePermission
            Resource:
              - 'arn:aws:lambda:us-east-1:156667292120:function:netcontrol-fcc-processor'
      Roles:
        - aws-elasticbeanstalk-ec2-role